<h1>Form</h1>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :venue %><br>
    <%= form.text_field :venue %>
  </div>

  <div>
    <%= form.label :event_type %><br>
    <%= form.text_field :event_type %>
  </div>

  <div>
    <%= form.label :start_date %><br>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date %><br>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.label :is_paid %><br>
    <%= form.check_box :end_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
